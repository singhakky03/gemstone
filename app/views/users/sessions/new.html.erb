<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">

		<h2>Sign in</h2>

		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=>{:multipart => true,class:'form-horizontal', role:'form' }) do |f| %>

		<%if !flash[:alert].blank?%>
			<div class="error">
				<%= flash[:alert] %>
			</div>
		<%end%>

		  <div class="form-group"><%= f.label :email %><br />
		  <%= f.email_field :email, :autofocus => true, class:'form-control', placeholder:'Enter Email' %></div>

		  <div class="form-group"><%= f.label :password %><br />
		  <%= f.password_field :password, class:'form-control', placeholder:'Enter Password' %></div>

		  <% if devise_mapping.rememberable? -%>
		    <div class="checkbox"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		  <% end -%>

		  <div><%= f.submit "Sign in", class: "btn btn-success" %></div>
		<% end %>

		<%= render "users/shared/links" %>

		</div>
	</div>
</div>